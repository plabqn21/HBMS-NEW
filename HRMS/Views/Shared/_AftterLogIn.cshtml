<!DOCTYPE html>
<html>



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Welcome to HRMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/W3CSS/w3CssPlugIn.css" rel="stylesheet" />

    <link href="~/Content/W3CSS/w3CssPlugInFont.css" rel="stylesheet" />
    <meta name="description" content="The description of my page" />

    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
</head>


    <body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                
                @Html.ActionLink("HRMS", "Index", "AfterLogIn", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="w3-dropdown-hover">



                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">House<b class="caret"></b></a>


                        <div class="w3-dropdown-content w3-border">


                            @Html.ActionLink("Add", "Create", "Houses")
                            @Html.ActionLink("All", "Index", "Houses")





                        </div>



                    </li>
                    
                    <li class="w3-dropdown-hover">



                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Renter<b class="caret"></b></a>


                        <div class="w3-dropdown-content w3-border">


                            @Html.ActionLink("Add", "Create", "Renters")
                            @Html.ActionLink("All", "Index", "Renters")





                        </div>



                    </li>
                 
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>

                <div class="panel panel-primary">
                    <div class="panel-heading" align="center"> &copy; @DateTime.Now.Year Powered by Ramsoft</div>

                </div>
            </p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
